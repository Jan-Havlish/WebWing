<!doctype html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>WebView App</title>
        <style>
            body {
                font-family:
                    -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
                    Helvetica, Arial, sans-serif;
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
                height: 100vh;
                margin: 0;
                background-color: #f0f0f2;
            }
            h1 {
                color: #333;
            }
            button {
                padding: 10px 20px;
                font-size: 16px;
                cursor: pointer;
                background-color: #007bff;
                color: white;
                border: none;
                border-radius: 5px;
                transition: background-color 0.2s;
                margin-bottom: 20px;
            }
            button:hover {
                background-color: #0056b3;
            }
            #result {
                padding: 15px;
                border-radius: 4px;
                background: #e9ecef;
                color: #333;
                min-height: 20px;
                text-align: center;
                border: 1px solid #ced4da;
                max-width: 80%;
            }
        </style>
    </head>
    <body>
        <h1>Hello from Webview.h!</h1>
        <p>This is a C++ starter app.</p>
        <button onclick="callCpp()">Call C++ from JS</button>
        <div id="result">Waiting for interaction...</div>
        <script>
            function callCpp() {
                window
                    .cpp_hello("world")
                    .then((res) => {
                        console.log("Raw C++ response:", res);
                        document.getElementById("result").innerText =
                            res.message +
                            " (Original request: " +
                            res.request +
                            ")";
                    })
                    .catch((err) => {
                        document.getElementById("result").innerText =
                            "Error calling C++: " + err;
                    });
            }
        </script>
    </body>
</html>
